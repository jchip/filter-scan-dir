{
  "name": "filter-scan-dir",
  "version": "1.5.0",
  "description": "Recursively scan and filter directory for a flat array of files",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsc",
    "test": "xrun -x build xarc/test-only",
    "lint": "clap lint",
    "coveralls": "cat coverage/lcov.info | coveralls",
    "coverage": "xrun -x build xarc/test-cov",
    "ci:check": "xrun --serial build check coveralls",
    "prepack": "publish-util-prepack",
    "postpack": "publish-util-postpack",
    "prepublishOnly": "xrun --serial [[build, docs], xarc/check]",
    "docs": "xrun xarc/docs && touch docs/.nojekyll"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jchip/filter-scan-dir.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.com/"
  },
  "files": [
    "dist",
    "lib"
  ],
  "keywords": [
    "util",
    "recursive",
    "filter",
    "scan",
    "walk",
    "dir",
    "directory",
    "readdir",
    "fs",
    "fast",
    "glob"
  ],
  "author": "Joel Chen <joel123@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/jchip/filter-scan-dir/issues"
  },
  "homepage": "https://github.com/jchip/filter-scan-dir",
  "dependencies": {},
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.14",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.16",
    "@types/sinon": "^9.0.10",
    "@types/sinon-chai": "^3.2.5",
    "@xarc/module-dev": "^4.1.0",
    "chai": "^4.3.4",
    "coveralls": "^3.1.1",
    "mocha": "^9.1.0",
    "nyc": "^15.1.0",
    "prettier": "^2.3.2",
    "publish-util": "^1.2.1",
    "run-verify": "^1.2.6",
    "sinon": "^9.2.2",
    "sinon-chai": "^3.5.0",
    "source-map-support": "^0.5.19",
    "ts-node": "^10.2.1",
    "typedoc": "^0.21.6",
    "typescript": "^4.3.5"
  },
  "nyc": {
    "all": true,
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ],
    "exclude": [
      "*clap.js",
      "*clap.ts",
      ".eslintrc.js",
      "coverage",
      "dist",
      "docs",
      "gulpfile.js",
      "test",
      "xrun*.js",
      "xrun*.ts"
    ],
    "check-coverage": true,
    "statements": 100,
    "branches": 100,
    "functions": 100,
    "lines": 100,
    "cache": true,
    "extends": [
      "@istanbuljs/nyc-config-typescript"
    ]
  },
  "engines": {
    "node": ">=8"
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "source-map-support/register",
      "@xarc/module-dev/config/test/setup.js"
    ],
    "recursive": true
  },
  "prettier": {
    "printWidth": 100
  },
  "@xarc/module-dev": {
    "features": [
      "mocha",
      "prettier",
      "typedoc",
      "typescript"
    ]
  }
}
