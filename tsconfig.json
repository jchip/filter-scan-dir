{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["es2018"],
    "module": "CommonJS",
    "esModuleInterop": true,
    "importHelpers": false,
    "target": "ES2018",
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "types": ["node", "mocha", "chai", "sinon", "sinon-chai"],
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true
  },
  "include": ["src"]
}
